{
  "name": "kryon-language",
  "displayName": "Kryon Language Support",
  "description": "Syntax highlighting for Kryon, Limbo, and KTML languages",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.75.0"
  },
  "icon": "icons/kryon.png",
  "categories": ["Languages"],
  "contributes": {
    "languages": [
      {
        "id": "kryon",
        "aliases": ["Kryon", "kryon"],
        "extensions": [".kry"],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/kryon.png",
          "dark": "./icons/kryon.png"
        }
      },
      {
        "id": "limbo",
        "aliases": ["Limbo", "limbo"],
        "extensions": [".b"],
        "configuration": "./language-configuration-limbo.json",
        "icon": {
          "light": "./icons/limbo.png",
          "dark": "./icons/limbo.png"
        }
      },
      {
        "id": "ktml",
        "aliases": ["KTML", "Kryon Text Markup Language"],
        "extensions": [".ktml"],
        "configuration": "./language-configuration-ktml.json",
        "icon": {
          "light": "./icons/ktml.png",
          "dark": "./icons/ktml.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "kryon",
        "scopeName": "source.kryon",
        "path": "./syntaxes/kryon.tmLanguage.json"
      },
      {
        "language": "limbo",
        "scopeName": "source.limbo",
        "path": "./syntaxes/limbo.tmLanguage.json"
      },
      {
        "language": "ktml",
        "scopeName": "source.ktml",
        "path": "./syntaxes/ktml.tmLanguage.json"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/KryonLabs/kryon-vscode"
  }
}
