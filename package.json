{
  "name": "kryon-language",
  "displayName": "Kryon Language Support",
  "description": "Syntax highlighting for Kryon programming language",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.75.0"
  },
  "icon": "icons/kryon.png",
  "categories": ["Languages"],
  "contributes": {
    "languages": [{
      "id": "kryon",
      "aliases": ["Kryon", "kryon"],
      "extensions": [".kry"],
      "configuration": "./language-configuration.json",
      "icon": {
        "light": "./icons/kryon.png",
        "dark": "./icons/kryon.png"
      }
    }],
    "grammars": [{
      "language": "kryon",
      "scopeName": "source.kryon",
      "path": "./syntaxes/kryon.tmLanguage.json"
    }]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/KryonLabs/kryon-vscode"
  }
}
