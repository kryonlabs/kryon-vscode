{
  "scopeName": "source.limbo",
  "patterns": [
    {"include": "#comments"},
    {"include": "#strings"},
    {"include": "#composite-types"},
    {"include": "#keywords"},
    {"include": "#types"},
    {"include": "#constants"},
    {"include": "#numbers"},
    {"include": "#functions"},
    {"include": "#built-in-functions"},
    {"include": "#adt"},
    {"include": "#module-declaration"},
    {"include": "#module-variable"},
    {"include": "#tuple-declaration"},
    {"include": "#operators"},
    {"include": "#module-access"}
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.limbo",
          "match": "#.*$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.limbo",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.limbo",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.limbo",
          "match": "\\b(if|else|case|for|while|do|return|break|continue|raise|exception|alt)\\b"
        },
        {
          "name": "keyword.declaration.limbo",
          "match": "\\b(implement|include|module|import|fn|con|type|fixed)\\b"
        },
        {
          "name": "keyword.other.limbo",
          "match": "\\b(spawn|of|self)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.builtin.limbo",
          "match": "\\b(byte|int|big|real|string|void)\\b"
        },
        {
          "name": "storage.type.composite.limbo",
          "match": "\\b(chan|list|array|ref|adt|fn)\\b"
        }
      ]
    },
    "composite-types": {
      "patterns": [
        {
          "name": "meta.type.composite.limbo",
          "match": "\\b(array|chan|list|ref)\\s+of\\s+(\\w+(?:\\s*\\.\\s*\\w+)*(?:\\s*\\[\\s*\\])?)",
          "captures": {
            "1": {"name": "storage.type.composite.limbo"},
            "2": {"name": "keyword.operator.word.limbo"},
            "3": {"name": "storage.type.builtin.limbo entity.name.type.adt.limbo"}
          }
        },
        {
          "name": "keyword.operator.word.limbo",
          "match": "\\bof\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.limbo",
          "match": "\\b(nil)\\b"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.integer.limbo",
          "match": "\\b[0-9]+\\b"
        },
        {
          "name": "constant.numeric.hex.limbo",
          "match": "\\b(0[xX][0-9a-fA-F]+|[0-9]+[rR][0-9a-zA-Z]+)\\b"
        },
        {
          "name": "constant.numeric.float.limbo",
          "match": "\\b[0-9]+\\.[0-9]+([eE][+-]?[0-9]+)?\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "meta.function.declaration.limbo",
          "match": "(\\b[a-z_][a-zA-Z0-9_]*\\b)\\s*(:)\\s*(fn)\\b",
          "captures": {
            "1": {"name": "entity.name.function.limbo"},
            "2": {"name": "punctuation.separator.key-value.limbo"},
            "3": {"name": "keyword.function.limbo"}
          }
        },
        {
          "name": "entity.name.function.limbo",
          "match": "(?<![\\w->])([a-z_][a-zA-Z0-9_]*)(?=\\s*\\()"
        }
      ]
    },
    "built-in-functions": {
      "patterns": [
        {
          "name": "support.function.builtin.limbo",
          "match": "\\b(load|print|fprint| sprint|fildes|open|create|read|write|seek|close|stat|wstat|dial|announce|listen|accept|spawn|alt|raise|exception|sysname|pctl|chan|array|real|int|string|big|byte|malloc|free|strlen|strcat|strcmp|strcpy|strchr|strrchr|tokenize|hexdigest|unhex)\\b"
        }
      ]
    },
    "adt": {
      "patterns": [
        {
          "name": "meta.adt.declaration.limbo",
          "match": "(\\b([A-Z][a-zA-Z0-9_]*)\\b)\\s*(:)\\s*(adt)\\b",
          "captures": {
            "1": {"name": "entity.name.type.adt.limbo"},
            "2": {"name": "entity.name.type.adt.limbo"},
            "3": {"name": "punctuation.separator.key-value.limbo"},
            "4": {"name": "storage.type.adt.limbo"}
          }
        },
        {
          "name": "entity.name.type.adt.limbo",
          "match": "\\b([A-Z][a-zA-Z0-9_]*)(?=\\s*[\\{\\}])"
        },
        {
          "name": "support.type.adt-ref.limbo",
          "match": "\\b([A-Z][a-zA-Z0-9_]*)(?=\\s*\\.)",
          "captures": {
            "1": {"name": "entity.name.type.adt.limbo"}
          }
        }
      ]
    },
    "module-declaration": {
      "patterns": [
        {
          "name": "meta.module.declaration.limbo",
          "match": "(\\b([A-Z][a-zA-Z0-9_]*)\\b)\\s*(:)\\s*(module)\\b",
          "captures": {
            "1": {"name": "entity.name.module.limbo"},
            "2": {"name": "entity.name.module.limbo"},
            "3": {"name": "punctuation.separator.key-value.limbo"},
            "4": {"name": "storage.type.module.limbo"}
          }
        },
        {
          "name": "meta.module.implement.limbo",
          "match": "\\b(implement)\\s+(\\b[A-Z][a-zA-Z0-9_]*\\b)",
          "captures": {
            "1": {"name": "keyword.declaration.limbo"},
            "2": {"name": "entity.name.module.limbo"}
          }
        },
        {
          "name": "meta.module.include.limbo",
          "match": "\\b(include)\\s+(\")",
          "captures": {
            "1": {"name": "keyword.declaration.limbo"},
            "2": {"name": "punctuation.definition.string.begin.limbo"}
          }
        },
        {
          "name": "meta.module.import.limbo",
          "match": "\\b([a-z_][a-zA-Z0-9_]*\\s*(?:,\\s*[a-z_][a-zA-Z0-9_]*\\s*)*)\\s*:\\s*(import)\\b",
          "captures": {
            "1": {"name": "entity.name.function.limbo variable.other.import.limbo"},
            "2": {"name": "keyword.declaration.import.limbo"}
          }
        }
      ]
    },
    "module-variable": {
      "patterns": [
        {
          "name": "meta.module.variable.limbo",
          "match": "\\b([a-z_][a-zA-Z0-9_]*)\\s*(:)\\s*([A-Z][a-zA-Z0-9_]*)\\s*(;)",
          "captures": {
            "1": {"name": "variable.other.module.limbo"},
            "2": {"name": "punctuation.separator.key-value.limbo"},
            "3": {"name": "entity.name.module.limbo"},
            "4": {"name": "punctuation.terminator.statement.limbo"}
          }
        },
        {
          "name": "variable.other.module.limbo",
          "match": "\\b([a-z_][a-zA-Z0-9_]*)(?=\\s*:\\s*[A-Z][a-zA-Z0-9_]*;)"
        }
      ]
    },
    "tuple-declaration": {
      "patterns": [
        {
          "name": "meta.tuple.declaration.limbo",
          "match": "(\\([^)]*\\))\\s*(:)\\s*(\\w+)",
          "captures": {
            "1": {"name": "meta.tuple.limbo variable.parameter.limbo"},
            "2": {"name": "punctuation.separator.key-value.limbo"},
            "3": {"name": "storage.type.builtin.limbo entity.name.type.adt.limbo"}
          }
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.channel.limbo",
          "match": "<-|=>|<-="
        },
        {
          "name": "keyword.operator.module-access.limbo",
          "match": "->"
        },
        {
          "name": "keyword.operator.assignment.limbo",
          "match": ":="
        },
        {
          "name": "keyword.operator.assignment.compound.limbo",
          "match": "\\+=|\\-=|\\*=|/=|%=|&=|\\|=|\\^=|<<=|>>="
        },
        {
          "name": "keyword.operator.assignment.simple.limbo",
          "match": "(?<![=!<>/])=(?![=>])"
        },
        {
          "name": "keyword.operator.comparison.limbo",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.logical.limbo",
          "match": "&&|\\|\\||!"
        },
        {
          "name": "keyword.operator.bitwise.limbo",
          "match": "&|\\||\\^|~|<<|>>"
        },
        {
          "name": "keyword.operator.arithmetic.limbo",
          "match": "\\+|\\-|\\*|\\/|%|\\+\\+|\\-\\-|\\*\\*"
        },
        {
          "name": "keyword.operator.list.cons.limbo",
          "match": "::"
        },
        {
          "name": "punctuation.separator.statement.limbo",
          "match": ";"
        },
        {
          "name": "punctuation.separator.comma.limbo",
          "match": ","
        },
        {
          "name": "punctuation.separator.colon.limbo",
          "match": ":"
        }
      ]
    },
    "module-access": {
      "patterns": [
        {
          "name": "variable.other.module.limbo",
          "match": "\\b[a-z_][a-zA-Z0-9_]*(?=->)"
        },
        {
          "name": "entity.name.function.module.limbo",
          "match": "(?<=->)[a-z_][a-zA-Z0-9_]*\\b"
        },
        {
          "name": "entity.name.type.adt.field.limbo",
          "match": "(?<=->)[a-z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
