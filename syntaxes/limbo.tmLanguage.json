{
  "scopeName": "source.limbo",
  "patterns": [
    {"include": "#comments"},
    {"include": "#strings"},
    {"include": "#keywords"},
    {"include": "#types"},
    {"include": "#constants"},
    {"include": "#numbers"},
    {"include": "#annotations"},
    {"include": "#module-declaration"},
    {"include": "#function-declaration"},
    {"include": "#adt-declaration"},
    {"include": "#module-variable"},
    {"include": "#variable-declaration"},
    {"include": "#module-access"},
    {"include": "#import-statement"},
    {"include": "#operators"}
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.limbo",
          "match": "#.*$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.limbo",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.limbo",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.limbo",
          "match": "\\b(if|else|case|for|while|do|return|break|continue|raise|exception|alt)\\b"
        },
        {
          "name": "keyword.declaration.limbo",
          "match": "\\b(implement|include|module|import|fn|con|type|fixed|spawn)\\b"
        },
        {
          "name": "keyword.other.limbo",
          "match": "\\b(of|self|nil)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.builtin.limbo",
          "match": "\\b(byte|int|big|real|string|void)\\b"
        },
        {
          "name": "storage.type.composite.limbo",
          "match": "\\b(array|chan|list|ref|adt|fn)\\b"
        },
        {
          "name": "entity.name.type.adt.limbo",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.numeric.integer.limbo",
          "match": "\\b[0-9]+\\b"
        },
        {
          "name": "constant.numeric.hex.limbo",
          "match": "\\b(0[xX][0-9a-fA-F]+|[0-9]+[rR][0-9a-zA-Z]+)\\b"
        },
        {
          "name": "constant.numeric.float.limbo",
          "match": "\\b[0-9]+\\.[0-9]+([eE][+-]?[0-9]+)?\\b"
        }
      ]
    },
    "numbers": {
      "patterns": []
    },
    "annotations": {
      "patterns": []
    },
    "module-declaration": {
      "patterns": [
        {
          "name": "meta.module.declaration.limbo",
          "match": "(\\b[A-Z][a-zA-Z0-9_]*\\b)\\s*(:)\\s*(module)\\b",
          "captures": {
            "1": {"name": "entity.name.module.limbo"},
            "2": {"name": "punctuation.separator.key-value.limbo"},
            "3": {"name": "keyword.declaration.limbo"}
          }
        },
        {
          "name": "meta.module.implement.limbo",
          "match": "\\b(implement)\\s+(\\b[A-Z][a-zA-Z0-9_]*\\b)\\s*(;)",
          "captures": {
            "1": {"name": "keyword.declaration.limbo"},
            "2": {"name": "entity.name.module.limbo"},
            "3": {"name": "punctuation.terminator.statement.limbo"}
          }
        },
        {
          "name": "meta.adt.declaration.limbo",
          "match": "(\\b[A-Z][a-zA-Z0-9_]*\\b)\\s*(:)\\s*(adt)\\b",
          "captures": {
            "1": {"name": "entity.name.type.adt.limbo"},
            "2": {"name": "punctuation.separator.key-value.limbo"},
            "3": {"name": "storage.type.composite.limbo"}
          }
        }
      ]
    },
    "function-declaration": {
      "patterns": [
        {
          "name": "meta.function.declaration.limbo",
          "match": "(\\b[a-z_][a-zA-Z0-9_]*\\b)\\s*(:)\\s*(fn)\\b",
          "captures": {
            "1": {"name": "entity.name.function.limbo"},
            "2": {"name": "punctuation.separator.key-value.limbo"},
            "3": {"name": "keyword.declaration.limbo"}
          }
        },
        {
          "name": "entity.name.function.limbo",
          "match": "(?<=\\(|\\s|^|,)([a-z_][a-zA-Z0-9_]*)(?=\\s*\\()"
        },
        {
          "name": "support.function.builtin.limbo",
          "match": "\\b(load|print|fprint|sprint|fildes|open|create|read|write|seek|close|stat|wstat|dial|announce|listen|accept|sysname|pctl|malloc|free|strlen|strcat|strcmp|strcpy|strchr|strrchr|tokenize|hexdigest|unhex|bind|mount|spawn|hd|tl|len|array|real|int|string|big|byte)\\b"
        }
      ]
    },
    "adt-declaration": {
      "patterns": []
    },
    "module-variable": {
      "patterns": [
        {
          "name": "meta.module.variable.limbo",
          "match": "\\b([a-z_][a-zA-Z0-9_]*)\\s*(:)\\s*([A-Z][a-zA-Z0-9_]*)\\s*;",
          "captures": {
            "1": {"name": "variable.other.limbo"},
            "2": {"name": "punctuation.separator.key-value.limbo"},
            "3": {"name": "entity.name.type.adt.limbo"}
          }
        }
      ]
    },
    "variable-declaration": {
      "patterns": [
        {
          "name": "meta.variable.declaration.limbo",
          "match": "\\b([a-z_][a-zA-Z0-9_]*)\\s*(:)\\s+(\\w+)",
          "captures": {
            "1": {"name": "variable.other.limbo"},
            "2": {"name": "punctuation.separator.key-value.limbo"},
            "3": {"name": "storage.type.builtin.limbo"}
          }
        }
      ]
    },
    "module-access": {
      "patterns": [
        {
          "name": "meta.module.access.limbo",
          "match": "\\b([a-z_][a-zA-Z0-9_]*)\\s*(->)\\s*([a-zA-Z0-9_]+)\\b",
          "captures": {
            "1": {"name": "variable.other.module.limbo"},
            "2": {"name": "keyword.operator.access.limbo"},
            "3": {"name": "entity.name.function.module.limbo variable.other.property.limbo"}
          }
        },
        {
          "name": "meta.module.access.constant.limbo",
          "match": "\\b([A-Z][a-zA-Z0-9_]*)\\s*(->)\\s*([A-Z][a-zA-Z0-9_]*)\\b",
          "captures": {
            "1": {"name": "entity.name.type.adt.limbo"},
            "2": {"name": "keyword.operator.access.limbo"},
            "3": {"name": "constant.other.limbo"}
          }
        }
      ]
    },
    "import-statement": {
      "patterns": [
        {
          "name": "meta.import.limbo",
          "match": "\\b([a-z_][a-zA-Z0-9_]*\\s*(?:,\\s*[a-z_][a-zA-Z0-9_]*\\s*)*)\\s*:\\s*(import)\\b",
          "captures": {
            "1": {"name": "variable.other.import.limbo"},
            "2": {"name": "keyword.declaration.limbo"}
          }
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.assignment.limbo",
          "match": ":="
        },
        {
          "name": "keyword.operator.channel.limbo",
          "match": "<-|=>|<-="
        },
        {
          "name": "keyword.operator.access.limbo",
          "match": "->"
        },
        {
          "name": "keyword.operator.comparison.limbo",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.logical.limbo",
          "match": "&&|\\|\\||!"
        },
        {
          "name": "keyword.operator.bitwise.limbo",
          "match": "&|\\||\\^|~|<<|>>"
        },
        {
          "name": "keyword.operator.arithmetic.limbo",
          "match": "\\+|\\-|\\*|\\/|%|\\+\\+|\\-\\-|\\*\\*"
        },
        {
          "name": "keyword.operator.list.limbo",
          "match": "::"
        },
        {
          "name": "keyword.operator.assignment.compound.limbo",
          "match": "\\+=|\\-=|\\*=|/=|%=|&=|\\|=|\\^=|<<=|>>="
        },
        {
          "name": "keyword.operator.assignment.simple.limbo",
          "match": "(?<![=!<>/])=(?![=>])"
        },
        {
          "name": "punctuation.terminator.statement.limbo",
          "match": ";"
        },
        {
          "name": "punctuation.separator.comma.limbo",
          "match": ","
        },
        {
          "name": "punctuation.bracket.limbo",
          "match": "\\{|\\}|\\(|\\)|\\[|\\]"
        }
      ]
    }
  }
}
